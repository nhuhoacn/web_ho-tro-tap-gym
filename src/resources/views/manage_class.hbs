                        <canvas id="char_join_date"></canvas>
                        <input hidden="hidden" id="join_date" value="{{value.join_date}}">
                        <input hidden="hidden" id="sl_theongay" value="{{value.sl_theongay}}">
                    </div>
                </div>
                <div class="col-sm-12 col-xl-6">
                    <div class="bg-light rounded h-100 p-4">
                        <h6 class="mb-4">Biểu đồ theo buổi học</h6>
                        <canvas id="myChart"></canvas>
                        <input hidden="hidden" id="so_luong_dk" value="{{value.so_luong_dk}}">
