        <!-- Sales Chart End --> --}}


        <!-- Recent Sales Start -->
        <div class="container-fluid pt-4 px-4">
            <div class="bg-light text-center rounded p-4">
                <div class="d-flex align-items-center justify-content-between mb-4">
                    <h6 class="mb-0">Danh sách các buổi trong tuần( {{#component value.days 2}}{{/component}} -
                        {{#component value.days 7}}{{/component}} )</h6>
                    <a class="hover_coler" href="/class/create">Tạo buổi học</a>
                </div>
                <div class="table-responsive">
                    <table class="table text-start align-middle table-bordered table-hover mb-0">
                        <thead>
                            <tr class="text-dark">
                                {{!-- <th scope="col"><input class="form-check-input" type="checkbox"></th> --}}
                                <th scope="col">STT</th>
                                <th scope="col">Buổi</th>
                                <th scope="col">Giờ bắt đầu</th>
                                <th scope="col">Thứ</th>
                                <th scope="col">Phòng</th>
                                <th scope="col">Học viên</th>
                                <th scope="col">Giảng viên</th>
                                <th scope="col">Thay đổi</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each value.all_class}}
                            <tr>
                                {{!-- <td><input class="form-check-input" type="checkbox"></td> --}}
                                <td>{{stt}}</td>
                                <td>{{name}}</td>
                                <td>{{start_time}}</td>
                                <td>{{weekday}}</td>
                                <td>{{room_address}}</td>
                                <td>{{count_hv}}/{{maximum}}</td>
                                <td>{{trainer}}</td>
                                <td>
                                    <form method="POST" action="/class/delete_class"
                                        class="manage_user btn btn-sm btn-primary">
                                        <input hidden="hidden" name="class_id" value="{{class_id}}">
                                        <button class="btn-primary">Xoá</button>
                                    </form>
                                    <form action="/class/change_class" class="btn btn-sm btn-primary">
                                        <input hidden="hidden" name="class_id" value="{{class_id}}">
                                        <button class="btn-primary">Chỉnh sửa</button>
                                    </form>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <!-- Recent Sales End -->

    </div>
    <!-- Content End -->


    <!-- Back to Top -->
    <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>
</div>