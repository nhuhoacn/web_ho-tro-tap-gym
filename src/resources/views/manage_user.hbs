<div class="content">
    <div class="search-admin">
        <nav class="navbar navbar-expand bg-light navbar-light sticky-top px-4 py-0">
            <a href="index.html" class="navbar-brand d-flex d-lg-none me-4">
                <h2 class="text-primary mb-0"><i class="fa fa-hashtag"></i></h2>
            </a>
            <a href="#" class="sidebar-toggler flex-shrink-0">
                <i class="fa fa-bars"></i>
            </a>
            <form class="d-none d-md-flex ms-4">
                <input class="form-control border-0" name="search_user" type="search" placeholder="Nhập tên người dùng">
            </form>
            <div class="navbar-nav align-items-center ms-auto">
                <div class="nav-item dropdown">
                    <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">
                        {{#if session.user.image}}
                        <img class="rounded-circle me-lg-2" src="/public/img/user/{{session.user.image}}" alt="avatar"
                            style="width: 50px; height: 50px;">
                        {{else}}
                        <img src="/public/img/Avatar-trang.png" alt="avatar" style="width: 40px; height: 40px;">
                        {{/if}}
                        <span class="d-none d-lg-inline-flex">{{session.user.name}}</span>
                    </a>
                    <div class="dropdown-menu dropdown-menu-end bg-light border-0 rounded-0 rounded-bottom m-0">
                        <a href="/info" class="dropdown-item">Thông tin cá nhân</a>
                        <a href="/user/logout" class="dropdown-item">Đăng xuất</a>
                    </div>
                </div>
            </div>
        </nav>
    </div>
    <!-- Recent Sales Start -->
    <div class="container-fluid pt-4 px-4">
        <div class="bg-light text-center rounded p-4">
            <div class="d-flex align-items-center justify-content-between  mb-4">
                <h6 class="mb-0">Người dùng</h6>
                {{!-- <select  name="select" class="mb-0 form-select" aria-label="Default select example" onchange="option_select_user(this.value);">
                    <option selected="selected"> Chọn vai trò</option>
                    <option value="1">Học viên</option>
                    <option value="2">Huấn luyện viên</option>
                    <option value="3">Admin</option>
                </select> --}}
                <div class="space"></div>
                <a href="/admin/manage_user">Show All</a>
            </div>
            <div class="table-responsive">
                <table class="table text-start align-middle table-bordered table-hover mb-0">
                    <thead>
                        <tr class="text-dark">
                            {{!-- <th scope="col"><input class="form-check-input" type="checkbox"></th> --}}
                            <th scope="col">STT</th>
                            <th scope="col">Tên người dùng</th>
                            {{!-- <th scope="col">Mã người dùng</th> --}}
                            <th scope="col">Email</th>
                            <th scope="col">Vai trò</th>
                            <th scope="col">Quản lý</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each all_user}}
                        <tr>
                            {{!-- <td><input class="form-check-input" type="checkbox"></td> --}}
                            <td>{{stt}}</td>
                            <td>{{name}}</td>
                            {{!-- <td>{{user_id}}</td> --}}
                            <td>{{email}}</td>
                            {{#ifCond role "==" 3}}
                            <td>Admin</td>
                            {{else ifCond role "==" 3 }}
                            <td>Huấn luyện viên</td>
                            {{else }}
                            <td>Học viên</td>
                            {{/ifCond}}
                            <td>
                                <form method="POST" action="/user/delete_user"
                                    class="manage_user btn btn-sm btn-primary">
                                    <input hidden="hidden" name="user_id" value="{{user_id}}">
                                    <button class="btn-primary">Xoá</button>
                                </form>
                                {{#ifCond authentication "==" 1}}
                                <form method="POST" action="/user/block_user"
                                    class="manage_user btn btn-sm btn-primary">
                                    <input hidden="hidden" name="user_id" value="{{user_id}}">
                                    <button class="btn-primary">Chặn</button>
                                </form>
                                {{else}}
                                <form method="POST" action="/user/unblock_user" class="btn btn-sm btn-primary">
                                    <input hidden="hidden" name="user_id" value="{{user_id}}">
                                    <button class="btn-primary">Bỏ chặn</button>
                                </form>
                                {{/ifCond}}
                                {{#ifCond role "==" 3}}
                                <form method="POST" action="/user/cancel_admin" class="btn btn-sm btn-primary">
                                    <input hidden="hidden" name="user_id" value="{{user_id}}">
                                    <button class="btn-primary">Huỷ quản lý</button>
                                </form>
                                {{else}}
                                <form method="POST" action="/user/add_admin" class="btn btn-sm btn-primary">
                                    <input hidden="hidden" name="user_id" value="{{user_id}}">
                                    <button class="btn-primary">Thêm quản lý</button>
                                </form>
                                {{/ifCond}}
                            </td>
                            {{!-- <td>
                                <form action="/info/change_info" class="btn btn-sm btn-primary">
                                    <input hidden="hidden" name="user_id" value="{{user_id}}">
                                    <button class="btn-primary">Chỉnh sửa</button>
                                </form>
                            </td> --}}
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
                <div class="blog-pagination text-start">
                    {{#list numPage number_page}}
                    {{this}}
                    {{/list}}
                    {{#ifCond number_page '==' numPage}}
                    <a>Next</a>
                    {{else}}
                    <a href="/admin/manage_user/page/{{pagenext}}">Next</a>
                    {{/ifCond}}
                </div>
            </div>
        </div>
    </div>
    <!-- Recent Sales End -->


    <!-- Back to Top -->
    <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>
</div>