        <!-- Recent Sales Start -->
        <div class="container-fluid pt-4 px-4">
            <div class="bg-light text-center rounded p-4">
                <div class="d-flex align-items-center justify-content-between mb-4">
                    <h6 class="mb-0">Quản lý blog</h6>
                    <a href="/blog/create">Thêm blog</a>
                </div>
                <div class="table-responsive">
                    <table class="table text-start align-middle table-bordered table-hover mb-0">
                        <thead>
                            <tr class="text-dark">
                                {{!-- <th scope="col"><input class="form-check-input" type="checkbox"></th> --}}
                                <th scope="col">STT</th>
                                <th scope="col">Tên blog</th>
                                <th scope="col">Tác giả</th>
                                <th scope="col">Mục</th>
                                <th scope="col">Ngày tạo</th>
                                <th scope="col">Quản lý</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each all_blog}}
                            <tr>
                                {{!-- <td><input class="form-check-input" type="checkbox"></td> --}}
                                <td>{{stt}}</td>
                                <td>{{name}}</td>
                                <td>{{author}}</td>
                                {{#ifCond topic_id "==" 1}}<td>Xây dựng cơ bắp</td>
                                {{else ifCond topic_id "==" 2 }} <td>Đốt mỡ</td>
                                {{else ifCond topic_id "==" 3 }} <td>Nâng cao sức khoẻ</td>
                                {{else ifCond topic_id "==" 4 }} <td>Yoga</td>
                                {{else ifCond topic_id "==" 8 }} <td>Toàn thân</td>
                                {{else ifCond topic_id "==" 10 }} <td>Tăng cân</td>
                                {{/ifCond}}
                                <td>{{date_create_blog}}</td>
                                <td>
                                    <form method="POST" action="/blog/delete_blog"
                                        class="manage_user btn btn-sm btn-primary">
                                        <input hidden="hidden" name="blog_id" value="{{blog_id}}">
                                        <button class="btn-primary">Xoá</button>
                                    </form>
                                    <form action="/blog/change_blog" class="btn btn-sm btn-primary">
                                        <input hidden="hidden" name="blog_id" value="{{blog_id}}">
                                        <button class="btn-primary">Chỉnh sửa</button>
                                    </form>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <!-- Recent Sales End -->
    </div>
