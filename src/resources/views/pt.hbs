<!-- Hero Start -->
<div class="container-fluid bg-primary p-5 bg-hero mb-5">
    <div class="row py-5">
        <div class="col-12 text-center">
            <h1 class="display-2 text-uppercase text-white mb-md-4">Huấn luyện viên</h1>
            <a href="/" class="btn btn-primary py-md-3 px-md-5 me-3">trang chủ</a>
            <a href="" class="btn btn-light py-md-3 px-md-5">Huấn luyện viên</a>
        </div>
    </div>
</div>
<!-- Hero End -->

<!-- Team Start -->
<div class="container-fluid p-5">
    <div class="mb-5 text-center">
        <h1 class="display-3 text-uppercase mb-0">Những chuyên gia</h1>
        <h5 class="text-primary text-uppercase">của chúng tôi</h5>
    </div>
    <div class="row g-5">
        {{#each pt}}
        <div class="col-lg-4 col-md-6">
            <div class="team-item position-relative">
                <div class="position-relative overflow-hidden rounded">
                    <img class="img-fluid w-100 image-pt" src="{{this.image}}" alt="">
                    <div class="team-overlay">
                        <div class="d-flex align-items-center justify-content-start">
                            <a class="btn btn-light btn-square rounded-circle mx-1" href="{{this.yt_link}}"><i
                                    class="fab fa-youtube"></i></a>
                            <a class="btn btn-light btn-square rounded-circle mx-1" href="{{this.fb_link}}"><i
                                    class="fab fa-facebook-f"></i></a>
                            <a class="btn btn-light btn-square rounded-circle mx-1" href="{{this.insta_link}}"><i
                                    class="fab fa-linkedin-in"></i></a>
                        </div>
                    </div>
                </div>
                <div class="position-absolute start-0 bottom-0 w-100 rounded-bottom text-center p-4"
                    style="background: rgba(34, 36, 41, .9);">
                    <h5 class="text-uppercase text-light">{{this.name}}</h5>
                    <p class="text-uppercase text-secondary m-0">Huấn luyện viên</p>
                </div>
            </div>
        </div>
        {{/each}}
        <div class="blog-pagination">
            {{#list numPage}}
            {{this}}
            {{/list}}
            <a href="{{pagenext}}">Next</a>
        </div>
    </div>
</div>
<!-- Team End -->